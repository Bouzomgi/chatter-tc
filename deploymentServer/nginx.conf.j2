# Main configuration
user  nginx;
worker_processes  auto;

# Required events section
events {
  worker_connections 1024;
}

# HTTP configuration
http {

  # Logging
  access_log  /var/log/nginx/access.log;
  error_log   /var/log/nginx/error.log;

  server {
    listen 80;

    server_name localhost;

    # Redirect all traffic to the web server on port 8000
    location /deployment {
        proxy_pass http://deployment-server:8000;
    }

    # Redirect all traffic to the web server on port 8000
    location / {
        {% if red_env == 'alpha' %}
        proxy_pass http://backend-alpha:8000; #red
        {% else %}
        proxy_pass http://backend-omega:8000; #red
        {% endif %}
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    {% if enable_test_route == 'true' %}
    location /test {
        # Remove the /test prefix from the URL
        rewrite ^/test(/.*)$ $1 break;

        {% if red_env == 'alpha' %}
        proxy_pass http://backend-omega:8000;
        {% else %}
        proxy_pass http://backend-alpha:8000;
        {% endif %}
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    {% endif %}

    error_page 404 /404.html;
    location = /404.html {
        return 404 "Page not found";
    }

    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
        return 500 "Server error";
    }
  }
}
